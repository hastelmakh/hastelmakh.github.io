{# @var project \App\Projects\Project #}

{% extends '@Projects~_shared/_project.html.twig' %}

{% block head %}
    {{ parent() }}
    {{ asset_import('@Projects~' ~ project.slug ~ '/main.js') }}
{% endblock %}

{% block content %}
    <section class="title">
        <div class="layout-content">
            <h1>{{ project.name }}</h1>
            <img src="{{ asset_path('@Projects~' ~ project.slug ~ '/images/byrd-logo.svg') }}" alt="byrd logo">
        </div>
    </section>

    <section class="cover">
        <div class="layout-content"></div>
    </section>

    <section class="about">
        <div class="layout-content">
            <h2>About the Project</h2>

            <div class="description">
                This project was created during an <b>internal Hackathon</b> at byrd, a SaaS platform where I worked as
                a Product Designer. Our team aimed to design a self-service interface where customers could manage their
                payment history without contacting support. The challenge: streamline a task that was previously only
                possible via a help ticket.
            </div>
        </div>
    </section>

    <section class="steps">
        <div class="layout-content">
            <h2>Project Steps</h2>

            <ol class="list">
                <li>
                    <div class="card">
                        <div class="image magnifier" aria-hidden="true"></div>
                        <h3 class="name">Research</h3>
                    </div>
                    <ul class="actions">
                        <li>Competitor Analysis</li>
                        <li>Stakeholder Interview</li>
                    </ul>
                </li>

                <li>
                    <div class="card">
                        <div class="image brain" aria-hidden="true"></div>
                        <h3 class="name">Ideation</h3>
                    </div>
                    <ul class="actions">
                        <li>Brainstorming</li>
                    </ul>
                </li>

                <li>
                    <div class="card">
                        <div class="image paintbrush" aria-hidden="true"></div>
                        <h3 class="name">Design</h3>
                    </div>
                    <ul class="actions">
                        <li>Wireframes</li>
                        <li>Hi-Fi Layouts</li>
                        <li>Prototype</li>
                    </ul>
                </li>

                <li>
                    <div class="card">
                        <div class="image megaphone" aria-hidden="true"></div>
                        <h3 class="name">Presentation</h3>
                    </div>
                    <ul class="actions">
                        <li>Pitch Deck</li>
                    </ul>
                </li>
            </ol>
        </div>
    </section>
{% endblock %}
